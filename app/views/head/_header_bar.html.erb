<% if !guest? || !logged_in? %>
  <div class="container mt-2 mb-3" style="height: 40px;">
    <div class="row text-center">
      <div class="col-sm-4">
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to "Todo", tasks_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to "complete", completed_tasks_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="btn-group" role="group" aria-label="Basic example">
          <%= link_to "deleted", deleted_tasks_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>