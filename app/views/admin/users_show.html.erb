<h3 class="mt-5">All Users List</h3>

<%= will_paginate(@users, class: "pagination justify-content-center text-muted m-5",
                  renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer)%>

<ul class="mt-5">
  <% @users.each do |user| %>
    <div class="card mb-3">
      <li>
        <h5 class="card-title ml-3 mt-3">
          <%= link_to user.name, edit_user_path(user), class: "text-info"%>
        </h5>
        <div class="card-body">
          <div>
            Email: 
            <%= user.email %>
          </div>
          <div>
            Admin:
            <%= user.admin %>      
          </div>
          <div>
            Task Count:
            <%= user.tasks.count %>
          </div>
        </div>
      </li>
    </div>
  <% end %>
</ul>