<h1>タスク検索</h1>
<%= search_form_for(@search, url:search_tasks_tasks_path) do |f| %>
  <div class="">
    <%= f.label :title, "title" %>
    <%= f.search_field :title_cont, id: "search_title", class: "mr-sm-2"%>
  </div>
  <div class="">
    <%= f.label :content, "content" %>
    <%= f.search_field :content_cont, class: "mr-sm-2 mr-5" %>
  </div>
  <div>
    <%= f.label :created_at_gteq, "From here" %>
    <%= f.date_field :created_at_gteq %>
  </div>
  <div>
    <%= f.label :created_at_lteq, "to here" %>
    <%= f.date_field :created_at_lteq %>
  </div>
  <span class="btn-outline-success my-2 my-sm-0"><%= f.submit "Search" %></span>
  <%= link_to "Reset", search_tasks_tasks_path, method: :get, class:"btn btn-default text-muted"%>
<% end %>
<%= render 'tasks', task: @tasks %>
