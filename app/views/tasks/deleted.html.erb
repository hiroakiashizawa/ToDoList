<table class="table mt-2">
  <thead>
    <tr>
      <td><h3>Deleted List</h3></td>
    </tr>
  </thead>
  <tr>
    <td>Title</td>
    <td>Content</td>
    <td>Timalimit</td>
  </tr>
  <% @tasks.each do |task| %>
    <% if status(task) == 'deleted' %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.timelimit %></td>
        <td><%= link_to "Edit", edit_task_path(task), method: :get, class: "text-info" %></td>
        <td><%= link_to "Restore", pre_destroy_task_path(task), method: :patch, class: "text-success" %></td>
        <td><%= link_to "Destroy", task_path(task), method: :delete, class: "text-danger", data: { confirm: "Completelly Delete, Are you sure?" } %></td>
      </tr>
    <% end %>
  <% end %>
</table>

<%= will_paginate(@tasks, class: "pagination justify-content-center text-muted m-5")  if @tasks.present? %>