<% if flash.now[:error] %>
  <p><%= flash.now[:error] %></p>
<% end %>

<%= form_with(model: @task, local: true) do |form| %>
  <div class="field">
    <%= form.text_field :title, autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= form.text_area :content %>
  </div>

  <div class="field">
    <%= form.date_field :timelimit %>
  </div>

  <span class="btn btn-sm">
    <%= form.submit %>
  </span>
  <span>
    <a href="/tasks" class="text-reset text-muted">cancel</a>
  </span>
<% end %>

<%= render 'tasks', task: @tasks %>